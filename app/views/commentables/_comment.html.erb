<li id="comment-<%= comment.id %>">
  <div class="comment-content"><%= render_markdown comment.text, redcarpet: { tags: [:autolink, :codespan, :emphasis, :link, :striketrough, :underline] } %></div>
  <%= render 'comments/details', comment: comment %>
  <%= render 'comments/editing', comment: comment %>
  <%= render 'comments/deleting', comment: comment %>
</li>
