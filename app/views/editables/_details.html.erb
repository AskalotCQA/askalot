<% if editable.edited? %>
  <%= t "#{model}.updated" %>
  <%= link_to_user editable.editor %>
  <%= tooltip_time_tag editable.edited_at, format: :normal, placement: :right %>
<% end %>

<% if editable.editor != editable.author %>
  <%= '&middot;'.html_safe if editable.edited? %>
  <%= t("#{model}.created").tap { |s| s.downcase_first! if editable.edited? } %>
  <%= link_to_user editable.author %>
<% end %>

<% if editable.editor != editable.author %>
  <%= tooltip_time_tag editable.created_at, format: :normal, placement: :right %>
<% end %>
