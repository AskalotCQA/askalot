<% provide(:title, t('user.index.title')) %>

<ul class="nav nav-tabs tab-navigation">
  <%= tab_link_tag_with_count t('user.tab.all'), :all, users_path(params.except(:page).merge tab: :all), User.count, remote: true %>
  <%= tab_link_tag_with_count t('user.tab.recent'), :recent, users_path(params.except(:page).merge tab: :recent), User.recent.count, remote: true %>
</ul>

<%= render 'users', users: @users %>
