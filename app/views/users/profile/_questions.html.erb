<% if questions.any? %>
  <ol class="user-questions">
    <% questions.each do |question| %>
      <%= render 'users/profile/question', question: question %>
    <% end %>
  </ol>

  <div class="row">
    <div class="col-md-12">
      <%= paginate questions, params: { tab: :questions } %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <% if user == current_user %>
        <span class="text-muted"><%= t('user.show.no_questions') %></span>
        <%= icon_link_to :'question-circle', t('user.show.ask'), new_question_path, class: 'btn btn-success' %>
      <% else %>
        <div class="alert alert-info">
          <%= t('user.show.other.no_questions') %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
