<div>
  <%= t('user.registered_at') %> <%= tooltip_time_tag user.created_at, format: :short, placement: :bottom %>,
  <%= t('user.last_sign_in_at').downcase_first %> <%= tooltip_time_tag user.current_sign_in_at || user.last_sign_in_at, format: :short, placement: :bottom %>
</div>

<hr/>

<% unless user.about.blank? %>
  <div class="user-profile-about">
    <%= render_markdown user.about %>
  </div>

  <hr/>
<% end %>

<h4 class="text-muted"><%= t 'user.activity.calendar.title' %></h4>

<%= render 'activities/calendar', user: user %>

<small class="text-muted"><%= t 'user.activity.calendar.note' %></small>
