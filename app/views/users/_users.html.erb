<div id="users" class="users tab-content">
  <% if users.any? %>
    <div class="row">
      <% users.each do |user| %>
        <div class="col-xs-6 col-sm-4 col-md-2">
          <%= render 'square', user: user, following: true %>
        </div>
      <% end %>
    </div>

    <%= paginate users, remote: true, data: { state: true, scroll: 'body', fade: '#users' } %>
  <% else %>
    <div class="alert alert-warning">
      <%= t('user.index.no_results_found') %>
    </div>
  <% end %>
</div>
