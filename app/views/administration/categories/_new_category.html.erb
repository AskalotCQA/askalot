<% provide :title, t('administration.category.tab') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @category do |f| %>
      <%= form_messages_for @category %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: :'form-control', rows: 1 %>
      </div>

      <div class="form-group">
        <%= f.label :tags %>
        <%= f.text_field :tags, class: :'form-control', data: { as: :select2, role: :tags } %>
      </div>

      <button type="submit" class="btn btn-success btn-lg"><%= t('administration.category.add') %></button>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <ul class="list-unstyled">
      <% @categories.each do |category| %>
        <div class="row">
          <div class="col-md-4">
            <%= link_to_category category %>
          </div>

          <div class="col-md-4">
            <% if category %>
              <% category.tags.each do |category_tag| %>
                <span class="label label-info"><%= category_tag %></span>
              <% end %>
            <% end %>
          </div>

          <div class="col-md-4">
            <div class="question-details">
              <%= render 'administration/categories/edit_category', category: category %>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
