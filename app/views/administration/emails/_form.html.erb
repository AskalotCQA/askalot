<%= form_tag("/administration/emails", method: "post") do %>

    <div class="form-group">
      <%= label_tag :subject, "Predmet emailu" %>
      <%= text_field_tag :subject, nil, class: :'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :test, "PoslaÅ¥ iba mne" %>
      <%= check_box_tag :test, nil, nil, class: :'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :html, "HTML mail" %>
      <%= check_box_tag :html, nil, nil, class: :'form-control' %>
    </div>

    <div class="form-group">
      <%= markdown_editor_for_email do %>
          <%= text_area_tag :text, nil, class: :'form-control', rows: 15 %>
      <% end %>
    </div>

    <button type="submit" class="btn btn-success"><%= t('administration.email.create.action') %></button>
<% end %>
