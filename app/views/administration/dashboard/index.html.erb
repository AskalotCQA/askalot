<% provide :title, t('administration.navigation') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked pill-navigation">
        <%= tab_link_tag t('administration.changelog.tab'), :changelog, administration_dashboard_index_path(tab: :changelog), data: { toggle: :pill } %>
        <%= tab_link_tag t('administration.category.tab'), :category, administration_dashboard_index_path(tab: :category), data: { toggle: :pill } %>
      </ul>
    </div>
    <div class="col-md-6">
      <div class="pill-content tab-content">
        <%= render_tab_content 'administration/new_changelog', :changelog %>
        <%= render_tab_content 'administration/new_category',  :category %>
      </div>
    </div>
  </div>
</div>
