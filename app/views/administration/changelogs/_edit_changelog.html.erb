&middot;

<a href="#" id="changelog-<%= changelog.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#category-<%= changelog.id %>-editing">
  <%= tooltip_icon_tag :edit, t('administration.category.edit.action'), placement: :top %>
</a>

<div id="category-<%= changelog.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for changelog do |f| %>
        <div class="modal-header">
          <div class="form-group">
            <%= f.label :version %>
            <%= f.text_field :version, class: :'form-control', rows: 1 %>
          </div>

          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: :'form-control', rows: 1 %>
          </div>

          <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text, class: :'form-control', rows: 5 %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'changelog.edit.cancel' %></button>
            <button type="submit" class="btn btn-primary"><%= t 'changelog.edit.submit' %></button>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
