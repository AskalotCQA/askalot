<%= form_messages key: tab %>

<%= render 'administration/assignments/form', assignment: @assignment, tab: tab %>

<ol class="administration-assignments">
  <% assignments.each do |assignment| %>
    <li>
      <div class="row">
        <div class="col-xs-4">
          <%= link_to_category assignment.category %>
        </div>

        <div class="col-xs-4">
          <%= link_to_user assignment.user %>
          <span class="text-muted">(<%= assignment.user.login %>)</span>
        </div>

        <div class="col-xs-2">
          <%= assignment.role.name %>
        </div>

        <div class="col-xs-2">
          <div class="pull-right">
            <%= render 'administration/assignments/editing', assignment: assignment, tab: tab %>
            <span class="text-muted">&middot;</span>
            <%= render 'administration/assignments/deleting', assignment: assignment, tab: tab %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ol>
