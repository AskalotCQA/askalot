<%= form_messages key: tab %>

<% if watchings.any? %>
  <ol class="watchings list-unstyled">
    <% watchings.each do |watching| %>
      <%= render 'watching', watching: watching %>
    <% end %>
  </ol>

  <%= paginate watchings, params: { tab: tab } %>
<% else %>
  <p class="alert alert-info">
    <%= t 'watching.none' %>
  </p>
<% end %>
