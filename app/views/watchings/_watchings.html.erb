<%= form_messages key: tab %>

<% if watchings.any? %>
  <ol class="watchings">
    <% watchings.each do |watching| %>
      <%= render 'watching', watching: watching %>
    <% end %>
  </ol>

  <%= render 'clean', model: tab.to_s.singularize %>

  <%= paginate watchings, params: { tab: tab } %>
<% else %>
  <p class="alert alert-info">
    <%= t 'watching.none' %>
  </p>
<% end %>
