<% if notifications.any? %>
  <ol class="notifications">
    <% notifications.each do |notification| %>
      <%= render 'notification', notification: notification %>
    <% end %>
  </ol>
<% else %>
  <p class="alert alert-info">
    <%= t notifications.size.zero? && notifications.size != notifications.unread.size ? 'notification.read' : 'notification.none' %>
  </p>
<% end %>
