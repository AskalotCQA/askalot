<%= form_for resource, as: resource_name, url: registration_path(resource_name, tab: :'user-account'), html: { method: :put} do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: :'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="form-group">
      <p class="help-block"><%= t('confirmation_pending', email: resource.unconfirmed_email) %></p>
    </div>
    <button type="submit" class="btn btn-success"><%= t('user.save_account') %></button>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <em>(<%= t('user.leave_current_password') %>)</em>
    <%= f.password_field :password, autocomplete: :off, class: :'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: :'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <em>(<%= t('user.enter_current_password') %>)</em>
    <%= f.password_field :current_password, class: :'form-control' %>
  </div>

  <button type="submit" class="btn btn-success"><%= t('user.save_account') %></button>
<% end %>

