<% provide :title, t('user.settings') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked pill-navigation">
        <%= pill_link_tag t('user.profile'), :profile, edit_user_registration_path(tab: :profile), analytics_attributes(:account, :switch, :profile) %>
        <%= pill_link_tag t('user.social'),  :social,  edit_user_registration_path(tab: :social),  analytics_attributes(:account, :switch, :social) %>
        <%= pill_link_tag t('user.privacy'), :privacy, edit_user_registration_path(tab: :privacy), analytics_attributes(:account, :switch, :privacy) %>
        <%= pill_link_tag t('user.account'), :account, edit_user_registration_path(tab: :account), analytics_attributes(:account, :switch, :account) %>
      </ul>
    </div>
    <div class="col-md-6">
      <div class="pill-content tab-content">
        <%= render_tab_content 'edit_profile', :profile %>
        <%= render_tab_content 'edit_social',  :social %>
        <%= render_tab_content 'edit_privacy', :privacy %>
        <%= render_tab_content 'edit_account', :account %>
      </div>
    </div>
  </div>
</div>
