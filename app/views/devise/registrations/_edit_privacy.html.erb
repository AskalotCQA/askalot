<%= form_for resource, as: :user, url: profile_users_path(tab: :'user-privacy'), html: { method: :patch } do |f| %>
  <div class="form-group">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <%= f.reversed_check_box :show_name, checked: !resource.show_name %> <%= User.human_attribute_name :hide_name %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <%= f.reversed_check_box :show_email, checked: !resource.show_email %> <%= User.human_attribute_name :hide_email %>
      </label>
    </div>
  </div>

  <button type="submit" class="btn btn-success"><%= t('user.save_account') %></button>
<% end %>
