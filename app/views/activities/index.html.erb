<% provide(:title, t('activity.index.title')) %>

<div class="tab-navigation">
  <ul class="nav nav-tabs">
    <%= tab_link_tag t('activity.tab.global'), :global, activities_path(params.except(:page).merge tag: :global) %>
    <%= tab_link_tag t('activity.tab.followees'), :followees, activities_path(params.except(:page).merge tag: :followees) %>
  </ul>
</div>

<div class="tab-content">
  <%= render_tab_content 'activities', :global, locals: { activities: @activities_global, tab: :global } %>
  <%= render_tab_content 'activities', :followees, locals: { activities: @activities_followees, tab: :followees } %>
</ul>
