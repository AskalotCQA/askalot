<% if activities.any? %>
  <ol class="activities">
    <% activities.each do |activity| %>
      <%= render 'activity', activity: activity %>
    <% end %>
  </ol>

  <%= paginate activities, params: { tab: tab } %>
<% else %>
  <div class="alert alert-info">
    <% if current_user.followees.any? || tab == :global %>
      <%= t('activity.none') %>
    <% else %>
      <%= t('user.followings.no_followees') %>
    <% end %>
  </div>
<% end %>

<p class="activities-note"><small class="text-muted"><%= t("activity.note.#{tab.to_s}") %></small></p>
