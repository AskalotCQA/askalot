<div id="answer-<%= answer.id %>-labeling" class="answer-labeling">
  <div class="answer-labeling-best">
    <% if can? :edit, answer.question %>
      <% if answer.labeled_by? current_user, :best %>
        <%= icon_link_to :'check-circle', nil, label_answer_path(answer, value: :best), data: { remote: true }, class: :'answer-labeled-best' %>
      <% else %>
        <%= icon_link_to :'check-circle', nil, label_answer_path(answer, value: :best), tooltip_attributes(t('answer.label.best'), placement: :right).deep_merge(data: { remote: true }) %>
      <% end %>
    <% elsif answer.best? %>
      <span><%= tooltip_icon_tag :'check-circle', t('answer.best'), placement: :right %></span>
    <% end %>
  </div>

