<div class="row">
  <div class="col-md-10">
    <h4 id="answer" class="form-title"><%= Answer.human_attribute_name :text %></h4>

    <%= form_for [question, answer], remote: true do |f| %>
      <%= hidden_field_tag :question_id, @question.id %>
      <%= hidden_field_tag :group_id, @group.id %>

      <div class="form-group">
        <%= markdown_editor_for answer do %>
          <%= f.text_area :text, class: :'form-control', rows: 5 %>
        <% end %>
      </div>

      <button type="submit" class="btn btn-primary"><%= t 'answer.new.submit' %></button>
    <% end %>
  </div>
</div>
