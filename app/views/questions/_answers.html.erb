<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <section id="question-answers">
      <h2>
        <%= t 'count_x.answer', count: answers.size %>
      </h2>
    </section>
  </div>
  <div class="col-md-2">
    <section class="text-center">
      <%= icon_link_to :plus, t('answer.new.action'), '#new_answer', id: :'new-answer', class: 'btn btn-success' %>
    </section>
  </div>
</div>

<hr/>

<% if answers.any? %>
  <div class="row">
    <div class="col-md-12">
      <ol class="question-answers list-unstyled">
        <% answers.each do |answer| %>
          <%= render 'questions/answer', answer: answer %>
        <% end %>
      </ol>
    </div>
  </div>

  <hr/>
<% end %>
