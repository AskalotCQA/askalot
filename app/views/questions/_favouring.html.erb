<div class="question-favouring">
  <% if question.favoured_by? current_user %>
    <%= icon_link_to :star, nil, favour_question_path(question), title: t('question.unfavour'), data: { toggle: :tooltip, placement: :bottom, remote: true }, id: :favour_question, class: :'question-favoured' %>
  <% else %>
    <%= icon_link_to :'star-o', nil, favour_question_path(question), title: t('question.favour'), data: { toggle: :tooltip, placement: :bottom, remote: true }, id: :favour_question %>
  <% end %>

  <% if @question.favorites.size > 0 %>
    <span class="text-muted"><%= @question.favorites.size %></span>
  <% end %>
</div>
