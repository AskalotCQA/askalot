<%# TODO (zbell) review sections %>
<section id="questions">
  <% if @questions.any? %>
  <ul class="list-unstyled">
    <% questions.each do |question| %>
      <%= render 'question', question: question %>
    <% end %>
  </ul>
 <% else %>
  <div class="row">
    <div class="col-md-12">
      <h3>
        <%= t('question.index.no_results_found') %></h4>
    </div>
  </div>
 <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= paginate @questions, remote: true, data: { state: true } %>
    </div>
  </div>
</section>
