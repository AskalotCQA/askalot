<section id="questions">
  <% if questions.any? %>
    <ol class="list-unstyled">
      <% questions.each do |question| %>
        <%= render 'question', question: question %>
      <% end %>
    </ol>
  <% else %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-warning">
          <%= t('question.index.no_results_found') %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= paginate questions, remote: true, data: { state: true } %>
    </div>
  </div>
</section>
