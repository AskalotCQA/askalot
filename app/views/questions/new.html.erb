<% provide :title, t('question.new') %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <section>
      <h1 class="form-title"><%= t 'question.create.title' %></h1>

      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, class: :'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :text %>
          <%= f.text_area :text, class: :'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: :'form-control', :'data-as' => :select2 } %>
        </div>

        <div class="form-group">
          <%= f.label :tag_list %>
          <%= f.text_field :tag_list, class: :'form-control', :'data-as' => :select2, :'data-role' => :tags, :'data-type' => :question %>
        </div>
        <button type="submit" class="btn btn-success btn-lg"><%= t 'question.create.submit' %></button>
      <% end %>
    </section>
  </div>
</div>
