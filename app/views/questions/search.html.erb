<%= provide(:title, t('question.search.title')) %>

<%= render 'searchables/search', target: controller_name %>

<ul id="questions-tab" class="nav nav-tabs tabs-navigation">
  <%= tab_link_tag_with_count t('question.tab.all'), :results, questions_path(params.slice(:q, :page)), @results.total_entries, analytics_attributes(:questions, :search, :results).merge(remote: true, data: { fade: '#questions' }) %>
</ul>

<%= render 'questions', questions: @results, remote: false %>
