<div id="questions-filter" class="questions-filter">
  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <%= icon_link_to :plus, t('question.new.feature'), new_question_path, analytics_attributes(:questions, :'open-new-form', :list).merge(class: 'btn btn-success') %>
    </div>

    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-6">
      <div class="collapse in" id="filtered-search">
        <%= form_tag questions_path, id: :filter_questions, method: :get, remote: true, data: { state: true } do %>
          <%= hidden_field_tag :tab, params[:tab] %>
          <%= hidden_field_tag :poll, params[:poll] %>
           <div class="form-group">
            <div class="input-group select2-bootstrap-prepend">
              <span class="input-group-addon">
                <a data-toggle="collapse" data-parent="#search-forms" href="#filtered-search"><%= icon_tag :search %></a>
              </span>
              <span class="input-group-addon">
                <a data-toggle="collapse" data-parent="#search-forms" href="#fulltext-search"><%= icon_tag :tags %></a>
              </span>
              <%= text_field_tag :tags, params[:tags], id: :question_tags, class: :'form-control', placeholder: t('question.tag.placeholder'), data: { as: :select2, role: [:tags, :filter].join(',') } %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="collapse" id="fulltext-search">
        <%= form_tag questions_path, id: :fulltext_search, method: :get, remote: true, data: { state: true } do %>
          <%= hidden_field_tag :tab, params[:tab] %>
          <%= hidden_field_tag :poll, params[:poll] %>
          <div class="form-group">
            <div class="input-group select2-bootstrap-prepend">
              <span class="input-group-addon">
                <a id="ft" data-toggle="collapse" data-parent="#search-forms" href="#filtered-search"><%= icon_tag :search %></a>
              </span>
              <span class="input-group-addon">
                <a data-toggle="collapse" data-parent="#search-forms" href="#fulltext-search"><%= icon_tag :tags %></a>
              </span>
              <%= text_field_tag :q, params[:q], id: :fulltext, class: :'form-control', placeholder: t('question.fulltext.placeholder') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
