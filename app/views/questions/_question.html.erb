<li>
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-4">
          <%= content_tag :span, class: [:'question-metric', question_votes_coloring(question)] do %>
            <span class="question-metric-value"><%= question.votes_difference %></span>
            <%= t('count.vote', count: question.votes_difference) %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= link_to question_path(question, anchor: :'question-answers'), { class: [:'question-metric', question_answers_coloring(question)], :'data-track-label' => "#{question.id}-question-answers", :'data-track-category' => "Question-Answers", :'data-track-action' => "Showing" } do %>
            <span class="question-metric-value"><%= question.answers.size %></span>
            <%= t('count.answer', count: question.answers.size) %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= content_tag :span, class: [:'question-metric', question_views_coloring(question)] do %>
            <span class="question-metric-value"><%= question.views_total %></span>
            <%= t('count.view', count: question.views_total) %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-7">
      <div class="question-preview">
        <h4>
          <%= evaluation_badge_tag question, placement: :bottom if question.evaluations.any? %>
          <%= link_to_question question, { length: 120, :'data-track-label' => "#{question.id}-question", :'data-track-category' => "Question", :'data-track-action' => "Showing"} %>
        </h4>

        <%= render 'questions/labels', labels: question.labels %>

        <div class="question-content">
          <%= question_text_preview question, length: 250 %>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <div class="question-author">
        <small><%= link_to_user question.author_or_anonymous %></small>
        <%= user_avatar_tag question.author_or_anonymous, image: { class: :'img-circle img-responsive', size: 64 } %>
        <small class="text-muted"><%= tooltip_time_tag question.created_at, format: :normal, placement: :bottom %></small>
      </div>
    </div>
  </div>
</li>
