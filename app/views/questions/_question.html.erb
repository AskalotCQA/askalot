<li>
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-4">
          <%= content_tag :span, class: [:'question-metric', question_votes_coloring(question)] do %>
            <span class="question-value"><%= question.votes_difference %></span>
            <%= t('count.vote', count: question.votes_difference) %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= link_to question_path(question, anchor: :'question-answers'), class: [:'question-metric', question_answers_coloring(question)] do %>
            <span class="question-value"><%= question.answers.size %></span>
            <%= t('count.answer', count: question.answers.size) %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= content_tag :span, class: [:'question-metric', question_views_coloring(question)] do %>
            <span class="question-value"><%= question.views_total %></span>
            <%= t('count.view', count: question.views_total) %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-7">
      <div class="question-preview">
        <h4>
          <%= evaluation_badge_tag question, placement: :bottom if question.evaluations.any? %>
          <%= link_to_question question %>
        </h4>

        <%= render 'questions/labels', labels: question.labels %>

        <p>
          <%= question_text_preview question %>
        </p>
      </div>
    </div>

    <div class="col-md-2">
      <div class="question-author">
        <small><%= link_to_user question.anonymous ? :anonymous : question.author %></small>
        <%= user_avatar_tag question.anonymous ? :anonymous : question.author, image: { class: :'img-circle img-responsive', size: 64 } %>
        <small class="text-muted"><%= tooltip_time_tag question.created_at, format: :normal, placement: :bottom %></small>
      </div>
    </div>
  </div>
</li>
