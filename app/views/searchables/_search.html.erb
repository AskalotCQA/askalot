<div id="search" class="search">
  <%= form_tag public_send("search_#{target}_path"), method: :get do %>
    <div class="input-group">
      <%= text_field_tag :q, params[:q], class: :'form-control' %>
      <span class="input-group-btn">
        <%= button_tag icon_tag(:search), name: nil, class: 'btn btn-default' %>
      </span>
    </div>
  <% end %>
</div>
