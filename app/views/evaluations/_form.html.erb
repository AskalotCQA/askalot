

<div id="<%= identify evaluable, :evaluation %>" class="modal fade" role="dialog" tabindex="-1" aria-hidden="true">
  <%= form_for [evaluable, evaluable.evaluations.where(evaluator: current_user).first || Evaluation.new], html: {id: nil, class: :'new-evaluation'} do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"><%= t 'evaluation.new.title' %></h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-danger">
                <%= f.radio_button :value, -2 %> <%= t 'evaluation.degrees.very_bad' %>
              </label>
              <label class="btn btn-danger">
                <%= f.radio_button :value, -1 %> <%= t 'evaluation.degrees.bad' %>
              </label>
              <label class="btn btn-warning">
                <%= f.radio_button :value,  0 %> <%= t 'evaluation.degrees.ok' %>
              </label>
              <label class="btn btn-success">
                <%= f.radio_button :value, +1 %> <%= t 'evaluation.degrees.good' %>
              </label>
              <label class="btn btn-success">
                <%= f.radio_button :value, +2 %> <%= t 'evaluation.degrees.very_good' %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <span class="help-block"><%= t 'evaluation.new.help' %>:</span>
            <%= f.text_area :text, id: nil, class: :'form-control', rows: 2 %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'evaluation.create.cancel' %></button>
          <button type="submit" class="btn btn-primary"><%= t 'evaluation.new.submit' %></button>
        </div>
      </div>
    </div>
  <% end %>
</div>
