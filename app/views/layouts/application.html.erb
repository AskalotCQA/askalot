<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8" />
    <title><%= resolve_title(yield :title) %></title>

    <%= render 'layouts/styles' %>
    <%= render 'layouts/description' %>
    <%= render 'layouts/social' %>

    <%= csrf_meta_tags %>
  </head>
  <body<%= resolve_sidebar(yield :sidebar) %>>
    <%= render 'layouts/header' %>
    <% if use_container? %>
      <div class="container">
        <%= flash_messages %>
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
    <%= render 'layouts/footer' %>
    <%= render 'shared/fixes' %>
    <%= render 'shared/locales' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :scripts %>
    <%= Garelic.monitoring 'UA-47906233-1' if Rails.env.production? %>
  </body>
</html>
