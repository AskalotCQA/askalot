<!DOCTYPE html>
<html>
  <head>
    <title>NaRuby</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if flash.any? %>
      <section id="flash">
        <div class="row">
          <% flash.each do |type, messages| %>
            <% Array.wrap(messages).each do |message| %>
              <div class="alert alert-<%= type %> fade in">
                <%= message %>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>

    <%= yield %>

  </body>
</html>
