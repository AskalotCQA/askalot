      <%= navbar_logo_tag default_title %>
    </div>
    <div class="collapse navbar-collapse"><!-- TODO(zbell) use hidden-xs -->
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li><%= icon_link_to :'plus-circle', nil, new_question_path %></li>
          <li><%= link_to current_user.nick, user_path(current_user.login) %></li>
