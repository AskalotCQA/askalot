<header id="header-navbar" class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
      </button>
      <%= navbar_logo_tag default_title %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to t('question.navigation'), questions_path %></li>
        <li><%= link_to t('category.navigation'), categories_path %></li>
        <li><%= link_to t('tag.navigation'), tags_path %></li>
        <li><%= link_to t('user.navigation'), users_path %></li>
        <li><%= link_to t('activity.navigation'), activities_path %></li>
        <% if user_signed_in? && can?(:observe, :all) %>
          <li><%= link_to t('statistic.navigation'), statistics_path %></li>
        <% end %>
        <li><%= link_to t('help.navigation'), help_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <%= render 'shared/notifications', notifications: current_user.notifications.unread.order(created_at: :desc).limit(5) %>
          <li class="visible-xs"><%= link_to t('user.profile'), user_path(current_user.nick) %></li>
          <li class="hidden-xs"><%= link_to current_user.nick, user_path(current_user.nick) %></li>
          <%= navbar_dropdown_tag :'cog', nil, '#', class: :'hidden-xs' do %>
            <li><%= link_to t('user.edit.profile'), edit_user_registration_path(tab: :profile) %></li>
            <li><%= link_to t('user.edit.social'),  edit_user_registration_path(tab: :social) %></li>
            <li><%= link_to t('user.edit.privacy'), edit_user_registration_path(tab: :privacy) %></li>
            <li><%= link_to t('user.edit.account'), edit_user_registration_path(tab: :account) %></li>
            <li class="divider"></li>
            <li><%= link_to t('help.navigation'), help_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('user.sign_out'), destroy_user_session_path, method: :delete %></li>
          <% end %>
          <li class="visible-xs"><%= link_to t('notification.navigation'), notifications_path %></li>
          <li class="visible-xs"><%= link_to t('user.settings'), edit_user_registration_path %></li>
          <li class="visible-xs"><%= link_to t('user.sign_out'), destroy_user_session_path, method: :delete %></li>
        <% else %>
          <% if Configuration.enable.registrations? %>
            <li><%= link_to t('user.sign_up'), new_user_registration_path %></li>
          <% end %>
          <li><%= link_to t('user.sign_in'), new_user_session_path %></li>
        <% end %>
      </ul>
      <div class="navbar-form navbar-right hidden-xs hidden-sm hidden-print">
        <%= icon_link_to :'question-circle', nil, new_question_path, analytics_attributes(:question, :'open-new-form', :navigation).deep_merge(tooltip_attributes(t('question.new.feature'), placement: :left).merge(class: 'btn btn-primary')) %>
      </div>
    </div>
  </div>
</header>

<%= yield :header %>
