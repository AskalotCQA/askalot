            <li><%= link_to t('user.edit.profile'), edit_user_registration_path %></li>
            <li><%= link_to t('user.edit.social'), edit_user_registration_path %></li>
            <li><%= link_to t('user.edit.privacy'), edit_user_registration_path %></li>
            <li><%= link_to t('user.edit.account'), edit_user_registration_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('user.sign_out'), destroy_user_session_path, method: :delete %></li>
          <% end %>
        <% else %>
          <li><%= link_to t('user.sign_up'), new_user_registration_path %></li>
          <li><%= link_to t('user.sign_in'), new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
