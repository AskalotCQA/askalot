<% provide :title, t('group.new.title') %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h1 class="form-title"><%= t('group.new.title') %></h1>

    <%= form_for @group do |f| %>
      <%= form_messages_for @group %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
      </div>

      <button type="submit" class="btn btn-primary"><%= t('group.new.submit') %></button>

    <% end %>
  </div>
</div>
