<a href="#" id="group-new-modal" class="btn btn-success" data-toggle="modal" data-target="#group-new">
  <%= icon_tag :plus, label: t('group.new.title') %>
</a>

<div id="group-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <%= form_for Group.new do |f| %>
      <%= form_messages_for Group.new %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title"><%= t('group.new.title') %></h3>
          </div>

          <div class="modal-body">
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: :'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: :'form-control', rows: 5 %>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'group.new.cancel' %></button>
            <button type="submit" class="btn btn-primary"><%= t 'group.new.submit' %></button>
          </div>
        </div>
      </div>
  <% end %>
</div>
