<div id="<%= identify evaluable, :evaluating %>" class="<%= model %>-evaluating">
  <% if can? :evaluate, evaluable %>
    <a href="#" <%= "class=#{model}-evaluated" if evaluable.evaluated_by? current_user %> data-toggle="modal" data-target="#<%= identify evaluable, :evaluate %>" data-track-label="#<%= identify evaluable, :evaluate %>" data-track-category="#{model}" data-track-action="Evaluating">
      <%= tooltip_icon_tag :magic, t('evaluation.new.action'), placement: :right %>
    </a>
  <% end %>
</div>

<% if can? :evaluate, evaluable %>
  <%= render 'evaluations/form', model: model, evaluable: evaluable %>
<% end %>
