<div id="<%= identify evaluable, :evaluating %>" class="<%= model %>-evaluating">
  <% if can? :evaluate, evaluable %>
    <a <%= "class=#{model}-evaluated" if evaluable.evaluated_by? current_user %> data-toggle="modal" data-target="#<%= identify evaluable, :evaluate %>">
      <%= icon_tag :magic %>
    </a>
  <% end %>
</div>

<% if can? :evaluate, evaluable %>
  <%= render 'evaluations/form', model: model, evaluable: evaluable %>
<% end %>
