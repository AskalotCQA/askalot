<div id="tags" class="tags tab-content">
  <% unless tags.length.zero? %>
    <div class="row">
      <% tags.each do |tag| %>
        <div class="col-sm-6 col-md-4">
          <h4>
            <%= link_to_tag tag, analytics_attributes(:tag, :click, tag.name) %>
          </h4>
          <div class="tag-details">
            <%= t('count.question', count: tag.questions.size).upcase_first %> <%= tag.questions.size %> &middot;
            <%= t('count.answer', count: tag.questions.answered.size).upcase_first %> <%= tag.answers.size %> &middot;
            <%= render 'watching', tag: tag %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning">
      <%= t('tag.no_records') %>
    </div>
  <% end %>
</div>
