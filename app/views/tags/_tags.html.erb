<div class="row">
  <div class="col-md-12">
    <% tags.each_slice(3) do |tags| %>
      <div class="row">
        <% tags.each do |tag| %>
          <div class="col-md-4">
            <h4>
              <%= link_to_tag tag %>
            </h4>
            <div class="tag-details">
              <%= t('count.question', count: tag.questions.size).upcase_first %> <%= tag.questions.size %> &middot;
              <%= t('count.answer', count: tag.questions.answered.size).upcase_first %> <%= tag.questions.answered.size %> &middot;
              <%= render 'watching', tag: tag %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
