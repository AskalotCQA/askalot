<% provide(:title, t('tag.index.title')) %>

<div class="row">
  <div class="col-md-12">
    <h1 class="page-header"><%= yield :title %></h1>

    <ul class="list-unstyled">
      <li class="category-group">
        <% @tags.each_slice(3) do |tags| %>
            <div class="row">
              <% tags.each do |tag| %>
                <div class="col-md-4">
                  <h4><%= link_to tag.name, questions_path(tags: tag.name) %></h4>
                  <p class="text-muted">
                    <%= tag.count %>
                    <span class="item-multiplier-x">Ã—</span>
                  </p>
                </div>
              <% end %>
            </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>
