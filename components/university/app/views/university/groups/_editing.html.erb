<% if can? :edit, group %>
  &middot;

  <a href="#" id="gorup-<%= group.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#group-<%= group.id %>-editing">
    <%= tooltip_icon_tag :edit, t('group.edit.action'), placement: :top %>
  </a>

  <div id="group-<%= group.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_for group do |f| %>
          <div class="modal-header">
            <h3 class="modal-title"><%= t('group.edit.title') %></h3>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: :'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= markdown_editor_for group do %>
                <%= f.text_area :description, id: nil, class: :'form-control markdown-editor-buttons', rows: Shared::Configuration.textarea_rows.comment %>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :visibility %>
              <%= f.visibility_collection_select :visibility %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'group.edit.cancel' %></button>
            <button type="submit" class="btn btn-primary"><%= t 'group.edit.submit' %></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
