<div class="row">
  <div class="col-xs-12 col-sm-2">
    <%= link_to '#', analytics_attributes(:groups, :'open-new-form', :list).deep_merge(id: :'group-new-modal', class: 'btn btn-success', data: { toggle: :modal, target: :'#group-new' }) do %>
      <%= icon_tag :plus, label: t('group.new.title') %>
    <% end %>
  </div>
</div>

<div id="group-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <%= form_for University::Group.new do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"><%= t('group.new.title') %></h3>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: :'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= markdown_editor_for University::Group.new do %>
              <%= f.text_area :description, id: nil, class: :'form-control markdown-editor-buttons', rows: Shared::Configuration.textarea_rows.comment %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :visibility %>
            <%= f.visibility_collection_select :visibility %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'group.new.cancel' %></button>
          <button type="submit" class="btn btn-primary"><%= t 'group.new.submit' %></button>
        </div>
      </div>
    </div>
  <% end %>
</div>
