<li id="answer-<%= answer.id %>" class="question-answer<%= ' bg-warning' if answer_highlighted? answer %>">
  <div class="row">
    <div class="col-sm-3 col-md-2 hidden-xs">
      <%= render 'university/users/square', user: answer.author %>
    </div>

    <div class="col-xs-9 col-sm-7 col-md-8">
      <div class="answer-content">
        <%= render_markdown answer.text %>
      </div>

      <div class="answer-details">
        <%= render 'university/answers/details', answer: answer %>
        <%= render 'university/answers/editing', answer: answer %>
        <%= render 'university/answers/deleting', answer: answer %>
      </div>

      <%= render 'university/answers/evaluations', answer: answer %>
      <%= render 'university/answers/comments', answer: answer %>
      <%= render 'university/comments/form', commentable: answer %>
    </div>

    <div class="col-xs-3 col-sm-2">
      <%= render 'university/answers/voting', answer: answer %>
      <%= render 'university/answers/labeling', answer: answer %>
      <%= render 'university/answers/evaluating', answer: answer %>
    </div>
  </div>
</li>
