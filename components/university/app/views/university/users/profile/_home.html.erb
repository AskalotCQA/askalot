<div>
  <%= t('user.registered_at', time: tooltip_time_tag(user.created_at, format: :short, placement: :bottom)).html_safe %><%= ',' if user.current_sign_in_at || user.last_sign_in_at %>
  <%= t('user.last_sign_in_at', time: tooltip_time_tag(user.current_sign_in_at || user.last_sign_in_at, format: :short, placement: :bottom)).downcase_first.html_safe if user.current_sign_in_at || user.last_sign_in_at %>
</div>

<hr/>

<% unless user.about.blank? %>
  <div class="user-profile-about">
    <%= render_markdown user.about %>
  </div>

  <hr/>
<% end %>

<h4 class="text-muted"><%= t 'user.activity.calendar.title' %></h4>

<%= render 'university/activities/calendar', user: user %>

<small class="text-muted"><%= t 'user.activity.calendar.note' %></small>
