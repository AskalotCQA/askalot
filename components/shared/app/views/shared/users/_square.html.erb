<div class="user-square">
  <%= user_avatar_tag user, image: { class: 'img-circle img-responsive', size: 96 } %>
  <%= render 'shared/users/reputation', user: user, size: :md %>

  <span class="user-link">
    <%= link_to_user user %>
    <%= render 'shared/users/following', user: user if local_assigns.has_key? :following %>
  </span>

  <span class="user-nick">
    <%= user.name if user != :anonymous && user.show_name? && !user.name.blank? %>
    <%= fa_icon :'graduation-cap', tooltip_attributes(t 'user.role.teacher') if teacher %>
    <%= fa_icon :'diamond', tooltip_attributes(t 'user.role.administrator') if administrator %>
  </span>
</div>
