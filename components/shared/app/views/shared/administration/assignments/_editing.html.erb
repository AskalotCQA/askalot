<a href="#" id="assignment-<%= assignment.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#assignment-<%= assignment.id %>-editing">
  <%= tooltip_icon_tag :edit, t('administration.assignment.edit.action'), placement: :top %>
</a>

<div id="assignment-<%= assignment.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for assignment, url: administration_assignment_path(assignment, tab: tab) do |f| %>
        <div class="modal-header">
          <h3 class="modal-title"><%= t 'administration.assignment.edit.title' %></h3>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :category_id %>
            <%= f.category_collection_select :category_id %>
          </div>

          <div class="form-group">
            <%= f.label :user_nick %>
            <%= f.text_field :user_nick, class: :'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :role_id %>
            <%= f.role_collection_select :role_id %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'administration.assignment.edit.cancel' %></button>
          <button type="submit" class="btn btn-primary"><%= t 'administration.assignment.edit.submit' %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
