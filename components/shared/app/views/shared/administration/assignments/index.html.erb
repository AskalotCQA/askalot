<%= render layout: 'shared/administration/layout' do %>
    <% if Rails.module.university? %>
        <%= render 'shared/administration/shared/categories_filter' %>
    <% end %>

  <%= render 'shared/administration/assignments/form', assignment: @assignment %>

  <ol class="administration-assignments">
    <%= render partial: 'shared/administration/assignments/assignment', collection: @assignments, as: :assignment %>
  </ol>

  <ol class="administration-users">
    <% users = Shared::User.includes(:assignments).where.not(role: :student).order(:nick) %>
    <%= render partial: 'shared/administration/assignments/user', collection: users, as: :user %>
  </ol>
<% end %>
