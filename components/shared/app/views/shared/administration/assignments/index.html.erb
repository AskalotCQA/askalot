<%= render layout: 'shared/administration/layout' do %>
    <% if Rails.module.university? %>
        <%= render 'shared/administration/shared/categories_filter' %>
    <% end %>

  <%= render 'shared/administration/assignments/form', assignment: @assignment %>

  <ol class="administration-assignments">
    <% @assignments.each do |assignment| %>
      <%= render 'shared/administration/assignments/assignment', assignment: assignment %>
    <% end %>
  </ol>

  <ol class="administration-users">
    <% Shared::User.includes(:assignments).where.not(role: :student).order(:nick).each do |user| %>
      <%= render 'shared/administration/assignments/user', user: user %>
    <% end %>
  </ol>
<% end %>
