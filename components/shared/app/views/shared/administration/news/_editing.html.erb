<a href="#" id="new-<%= new.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#new-<%= new.id %>-editing">
  <%= tooltip_icon_tag :edit, t('administration.category.edit.action'), placement: :top %>
</a>

<div id="new-<%= new.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for new, url: shared.administration_news_path(new) do |f| %>
          <div class="modal-header">
            <h3 class="modal-title"><%= t 'administration.new.edit.title' %></h3>
          </div>

          <div class="modal-body">
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: :'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: :'form-control', rows: 5 %>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'administration.new.edit.cancel' %></button>
            <button type="submit" class="btn btn-primary"><%= t 'administration.new.edit.submit' %></button>
          </div>
      <% end %>
    </div>
  </div>
</div>
