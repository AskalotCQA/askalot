<%= form_for @new, url: administration_news_index_path(@new), method: :post do |f| %>
  <%= form_messages_for @new %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: :'form-control' %>
  </div>

  <div class="form-group">
    <%= markdown_editor_for @new do %>
      <%= f.text_area :description, class: :'form-control', rows: 5 %>
    <% end %>
  </div>

  <button type="submit" class="btn btn-success"><%= t('administration.new.create.action') %></button>
<% end %>
