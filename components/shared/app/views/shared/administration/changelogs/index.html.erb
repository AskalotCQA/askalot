<%= render layout: 'shared/administration/layout' do %>
  <%= render 'shared/administration/changelogs/form', changelog: @changelog %>

  <ol class="administration-changelogs">
    <% @changelogs.each do |changelog| %>
      <li>
        <div class="row">
          <div class="col-xs-2">
            <%= link_to changelog.version, url_to_repository("releases/tag/v#{changelog.version}") %>
          </div>

          <div class="col-xs-9">
            <%= changelog.title %>
          </div>

          <div class="col-xs-1">
            <div class="pull-right">
              <%= render 'shared/administration/changelogs/editing', changelog: changelog %>
              <span class="text-muted">&middot;</span>
              <%= render 'shared/administration/changelogs/deleting', changelog: changelog %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ol>
<% end %>