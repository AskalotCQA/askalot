<a href="#" id="changelog-<%= changelog.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#changelog-<%= changelog.id %>-editing">
  <%= tooltip_icon_tag :edit, t('administration.category.edit.action'), placement: :top %>
</a>

<div id="changelog-<%= changelog.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for changelog, url: shared.administration_changelog_path(changelog) do |f| %>
        <div class="modal-header">
          <h3 class="modal-title"><%= t 'administration.changelog.edit.title' %></h3>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :version %>
            <%= f.text_field :version, class: :'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: :'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text, class: :'form-control', rows: Shared::Configuration.textarea_rows.general %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'administration.changelog.edit.cancel' %></button>
          <button type="submit" class="btn btn-primary"><%= t 'administration.changelog.edit.submit' %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
