<a href="#" id="category-<%= category.id %>-edit-modal" class="text-muted text-undecorated" data-toggle="modal" data-target="#category-<%= category.id %>-editing">
  <%= tooltip_icon_tag :edit, t('administration.category.edit.action'), placement: :top %>
</a>

<div id="category-<%= category.id %>-editing" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for category, url: administration_category_path(category, tab: tab) do |f| %>
        <div class="modal-header">
          <h3 class="modal-title"><%= t 'administration.category.edit.title' %></h3>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: :'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :tags %>
            <%= f.text_field :tags, value: category.tags.join(','), class: :'form-control', data: { as: :select2, role: :tags } %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'administration.category.edit.cancel' %></button>
          <button type="submit" class="btn btn-primary"><%= t 'administration.category.edit.submit' %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
