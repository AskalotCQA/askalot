<%= form_for category, url: administration_categories_path(category, tab: tab) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: :'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, value: category.tags.join(','), class: :'form-control', data: { as: :select2, role: :tags } %>
  </div>

  <div class="form-group">
    <%= f.label :uuid %>
    <%= f.text_field :uuid, class: :'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :parent_id, t('administration.category.create.parent') %>
    <%= f.category_collection_select :parent_id, categories, :id, :full_tree_name %>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :shared %>
      <%= t 'activerecord.attributes.shared/category.shared' %>
    </label>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :askable %>
      <%= t 'activerecord.attributes.shared/category.askable' %>
    </label>
  </div>

  <button type="submit" class="btn btn-success"><%= t('administration.category.create.action') %></button>
<% end %>
