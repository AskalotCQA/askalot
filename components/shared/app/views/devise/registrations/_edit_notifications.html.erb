<%= form_for resource, as: :user, url: shared.profile_users_path(tab: tab), html: { method: :patch } do |f| %>
  <%= form_messages_for resource, key: tab %>

  <div class="form-group">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <%= f.check_box :read_notifications_thread, checked: resource.read_notifications_thread %>
        <%= Shared::User.human_attribute_name :read_notifications_thread %> <%= icon_tag resource.read_notifications_thread ? :check : :blank %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <%= f.check_box :send_email_notifications, checked: resource.send_email_notifications %>
        <%= Shared::User.human_attribute_name :send_email_notifications %> <%= icon_tag resource.send_email_notifications ? :check : :blank %>
      </label>
    </div>
  </div>

  <button type="submit" class="btn btn-success"><%= t('user.save_account') %></button>
<% end %>
